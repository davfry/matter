//Mixins

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

border-radius()
  border-radius arguments
  -webkit-border-radius arguments
  -moz-border-radius arguments

transition()
  transition arguments
  -webkit-transition arguments
  -moz-transition arguments

// Shadow

.btn
.btn-circ
.shdw
  box-shadow 0 4px 8px 0 rgba(2,2,2,.5)

// Hover

.btn
.btn-circ
.btn-flat
.btn-outline
  &:hover
    -webkit-filter brightness(95%)
  &:active
    -webkit-filter brightness(110%)
// Buttons

$btn-generic
  font-size 1rem
  display inline-block
  height 30px
  margin 0px 3px 15px 3px
  padding 0 2rem
  border-radius 3px
  line-height 30px
  text-transform uppercase
  cursor pointer

.btn:hover
  box-shadow 0 4px 8px 0 rgba(2,2,2,.75)

.btn
.btn-flat
  @extends $btn-generic
  border solid
  border-color
  outline 0
  background-clip padding-box
  text-decoration none
  color #ECECEC
  text-align center
  letter-spacing 1px
  transition 0.2s ease-out

.btn-outline
  @extends $btn-generic
  outline 0
  background-clip padding-box
  border 2px solid
  background none !important
  color @border-color


.btn-circ
  display inline-block
  position relative
  z-index 1
  width 40px
  height 40px
  line-height 40px
  padding 0
  border-radius 50%
  background-clip padding-box
  transition 0.25s
  cursor pointer
  margin 0px 3px 15px 3px
  font-size 1.25rem
  font-weight bold
  text-align center
  color #ECECEC
  &:hover
    box-shadow 0 4px 8px 0 rgba(2,2,2,.75)
// Nav
nav
.nav
  position absolute
  color #ECECEC
  letter-spacing 1px
  width 100%
  height 56px
  line-height 56px
  top 0
  border-bottom solid 1px #E5E5E5
  &-list
    display inline-block
    left 0
    margin 0
    padding 0
    position fixed
    text-align center
    top 0
    width 100%
    z-index 1
  &-item
    display inline-block
    padding 0 40px
    line-height 10vh
    margin 0
  &-logo
    font-size 1.25rem
    float left
    margin-left 5rem
    display inline-block
    padding 0
    z-index 1000


//Modal

.modal-overlay
  position absolute
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0,0,0,.7)
  opacity 0.95

.modal-inner
  padding 30px
  z-index 10000
  position absolute
  width 50%
  top 50%
  left 50%
  transform translate(-50%, -50%)
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  background-color #fff
  box-shadow 4px 4px 80px #000
  > p
    font-size 1rem

.modal-close
  position absolute
  cursor pointer
  top 1rem
  right 1rem



//Footer

footer
  border-top solid 1px
  border-color #E5E5E5
  bottom 0px
  position absolute
  margin-top 30px
  padding 30px
  width 100%
  color #BABABA
  .footer-copyright
    overflow hidden
    height 50px
    line-height 50px
    color rgba(255, 255, 255, 0.8)
    background-color rgba(51, 51, 51, 0.08)

//Cards
.caption
  display inline-block
  position relative
  margin 10px
  img
    display block
    max-width 300px

.caption::before,
.caption::after
  position absolute
  left 100%
  width 90%
  margin 0 0 0 10%
  font-weight 300
  color #89867e

.caption::before
  content attr(data-title)
  top 0
  height 10%
  padding 5px 30px 10px 10px
  font-size 1.5rem
  border-bottom 1px solid rgba(0,0,0, .1)

.caption::after
  content attr(data-description)
  top 15%
  padding 20px 10px 0
  font-size 1rem

.caption-hover
  display inline-block
  position relative
  margin 10px
  img
    display block
    max-width 300px

.caption-hover::before,
.caption-hover::after
  opacity 0
  position absolute
  width 100%
  color #fff
  padding 20px
  transition opacity 0.3s
  left 0
  max-width 100%
  box-sizing border-box

.caption-hover::before
  content attr(data-title)
  top 0
  height 20%
  background rgba(0,0,0,.7)
  font-size 1.5rem

.caption-hover::after
  content attr(data-description)
  top 20%
  height 80%
  background rgba(255,255,255,.9)
  color black
  font-size 1rem
  text-align left

.caption-hover:hover::before,
.caption-hover:hover::after
    opacity 1

//Accordian

.accordian
  width 30vw
  margin 10px auto 30px auto
  text-align left
  label
    padding 5px 20px
    position relative
    z-index 20
    display block
    height 30px
    cursor pointer
    color #777
    text-shadow 1px 1px 1px rgba(255,255,255,0.8)
    line-height 33px
    font-size 1rem
    background #ffffff
    border solid 1px
    border-color rgba(0,0,0,.25)
    filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#eaeaea',GradientType=0 )
    box-shadow 0px 0px 0px 1px rgba(155,155,155,0.3),
    1px 0px 0px 0px rgba(255,255,255,0.9) inset,
    0px 2px 2px rgba(0,0,0,0.1)
    &:hover
      background #fff
  input
    display none
    &:checked
      & ~ article
        -webkit-transition height 0.5s ease-in-out, box-shadow 0.1s linear
        -moz-transition height 0.5s ease-in-out, box-shadow 0.1s linear
        -o-transition height 0.5s ease-in-out, box-shadow 0.1s linear
        -ms-transition height 0.5s ease-in-out, box-shadow 0.1s linear
        transition height 0.5s ease-in-out, box-shadow 0.1s linear
        box-shadow 0px 0px 0px 1px rgba(155,155,155,0.3)
        &.ac-small
          height 140px
        &.ac-medium
          height 180px
        &.ac-large
          height 230px
  article
    background rgba(255, 255, 255, 0.5)
    margin-top -1px
    overflow hidden
    height 0px
    position relative
    z-index 10
    -webkit-transition height 0.3s ease-in-out, box-shadow 0.6s linear
    -moz-transition height 0.3s ease-in-out, box-shadow 0.6s linear
    -o-transition height 0.3s ease-in-out, box-shadow 0.6s linear
    -ms-transition height 0.3s ease-in-out, box-shadow 0.6s linear
    transition height 0.3s ease-in-out, box-shadow 0.6s linear
    p
      font-style italic
      color #777
      line-height 23px
      font-size 14px
      padding 20px
      text-shadow 1px 1px 1px rgba(255,255,255,0.8)

.accordian input:checked + label,
.accordian input:checked + label:hover
  background rgba(0,0,0,.1)
  color #000
  text-shadow 0px 1px 1px rgba(255,255,255, 0.6)
  box-shadow 0px 0px 0px 1px rgba(155,155,155,0.3),
    0px 2px 2px rgba(0,0,0,0.1)

.accordian label:hover:after,
.accordian input:checked + label:hover:after
  content ''
  position absolute
  width 24px
  height 24px
  right 13px
  top 7px

//Input

input
  &[type="text"]
    height 30px
    border none
    width 150px
    border-bottom 2px solid hsl(184, 6%, 53%)
    font-size 1rem
    margin 0px 3px 15px 3px
    background transparent
    &:focus
      border-bottom 2px solid hsl(168, 76%, 42%)
      outline none
      transition border-color 0.5s ease
    &[placeholder]
      font-family 'source-code-pro'
  &[type="submit"]
  &[type="reset"]
    height 30px
    font-size 1rem
    background transparent
    color hsl(184, 6%, 53%)
    border none
    text-align center
    letter-spacing .15rem
    transition color 0.5s ease
    outline none
    cursor pointer
    &:hover
      cursor pointer
      color hsl(168, 76%, 42%)
      transition color 0.5s ease
