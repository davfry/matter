// define core styles

html
  font-family 'source-code-pro' sans-serif

body
body > div
  height 100%
  width 100%
  background hsl(0, 0%, 98%)
body
  position absolute
  margin 0
  text-align center
  > div
    display flex
    flex-direction column
    justify-content center

h1,h2,h3,h4,h5,h6
